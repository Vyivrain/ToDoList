<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= radio_button_tag :status, "uncompleted", true %>
    <%= f.label "Uncompleted" %><br>
    <%= radio_button_tag :status, "completed" %>
    <%= f.label "Completed" %>
  </div>
   <div class="field">
    <%= f.label :dead_line %><br>
    <%= f.text_field :dead_line %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
